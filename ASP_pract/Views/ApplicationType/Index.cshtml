@model IEnumerable<ASP_Models.ApplicationType>

@{
    ViewData["Title"] = "Index"; 
}

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="far fa-plus-square"></i> &nbsp;  Create new ApplicationType
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
            {
        <table class="table table-border table-striped" width="100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="40%">@obj.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="far fa-edit"></i> &nbsp; Edit
                            </a>
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2 ">
                                <i class="far fa-trash-alt"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
            }
            else{
        <p>No Category</p>
    }

</div>



